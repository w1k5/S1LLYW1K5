pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

function _init()
  dee = {} --table for player
  dee.x = 15
  dee.y = 80
  dee.sprite = 0
  dee.blink1 = 1
  dee.blink2 = 2

  choose = {} --lil arrow to make descisions
  choose.x = 10
  choose.y = 112
  choose.sprite = 15

  spark = {} --table for growth
  spark.sprite = 5

  stanley = {} --ai information
  stanley.res = 0

  map_x=0 --get map
  map_spd=1
end

function _mapscroll()
  map_x-=map_spd
  if map_x<-127 then map_x=0
  end
end

function draw_unit(unit)
  spr(unit.sprite, unit.x, unit.y)
end

function stan_talk()
  if (stanley.res==0) then
    print('hey, who the fuck are you?', 10, 10, 7)
  end
end

function dee_talk()
  if (stanley.res==0) then
    print('who cares?', 13, 112)
    print('you tell me', 13, 120)
  end
end

function dee_walk()
  if (btn(0) and dee.x > 0) dee.x -=1
  if (btn(1) and dee.x < 120) dee.x += 1
end

function dee_choose()
  if (btn(2)) then choose.y = 112
  if (btn(3)) then choose.y = 120
  if (btn(5) and choose.y = 112) stanley.res += 1
  if (btn(5) and choose.y = 120) stanley.res += 2
end

function _update()
  dee_choose()
  stan_talk()
  dee_talk()
  dee_walk()
end

function _draw()
 cls()
 map(0,map_x,0,16,16)
 map(0,0,128+map_x,0,16,16)

 draw_unit(dee)
 stan_talk()
 dee_talk()
end
