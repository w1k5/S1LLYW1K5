pico-8 cartridge // http://www.pico-8.com
version 18
__lua__

function _init()
  dee = {} --table for player
  dee.x = 15
  dee.y = 72
  dee.sprite = 0
  dee.blink1 = 1
  dee.blink2 = 2

  choose = {} --lil arrow to make descisions
  choose.x = 11
  choose.y = 102
  choose.sprite = 15

  spark = {} --table for growth
  spark.sprite = 5

  stanley = {} --ai information
  stanley.res = 0
end

function draw_unit(unit)
  spr(unit.sprite, unit.x, unit.y)
end

function draw_choose()
  print('>', 14, choose.y, 0)
end

function stan_talk()
  if (stanley.res==0) then
    print('hey, who the fuck are you?', 10, 10, 7) end
  if (stanley.res==1) then
  		print('i care. i asked for a reason.', 10, 10, 7) end
  if (stanley.res==2) then
  		print('a name is but a sound... maybe even just letters on a screen.', 10, 10, 7)	end
end

function dee_talk()
  if (stanley.res==0) then
    print('who cares?', 20, 102, 0)
    print('you tell me...', 20, 110, 0)
  end
end

function dee_walk()
  if (btn(0) and dee.x > 0) dee.x -= 1
  if (btn(1) and dee.x < 120) dee.x += 1
end

function dee_choose()
  if (btn(2)) then choose.y = 102 end
  if (btn(3)) then choose.y = 110 end
  if (btn(5)) then
    if (choose.y==112) then stanley.res+=1 end end
  if (btn(5)) then
    if (choose.y==120) then stanley.res+=2 end end
end

function _update()
  dee_choose()
  stan_talk()
  dee_talk()
  dee_walk()
end

function _draw()
 cls()
 map(0,0,0,0,16,16)
 draw_unit(dee)
 stan_talk()
 dee_talk()
 draw_choose()
end
